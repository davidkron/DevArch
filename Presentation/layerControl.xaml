<UserControl x:Class="Presentation.LayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance local:LayerControl}">
    <UserControl.Background>AliceBlue</UserControl.Background>
    
    <UserControl.Resources>
        <!-- Layer border style -->
        <Style x:Key="LayerBorderStyle" TargetType="{x:Type Border}">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="4"/>
            <Setter Property="BorderBrush" Value="SandyBrown"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
    </UserControl.Resources>

        <Border Style="{StaticResource LayerBorderStyle}">
            <DockPanel>
                <TextBlock HorizontalAlignment="Center" DockPanel.Dock="Top" Text="{Binding LayerName}"/>
                <Grid x:Name="ChildPanel">
                </Grid>
            </DockPanel>
        </Border>

</UserControl>
