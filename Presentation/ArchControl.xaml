<UserControl x:Class="Diagonal2.ArchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical" Name="Stackpanel" Margin="10,0">
            <TextBlock Margin="10" HorizontalAlignment="Center">Arch</TextBlock>
            <Button Content="Generate Diagram" Click="GenerateDiagram" Height="36" x:Name="button1" Margin="0,0,84,0" RenderTransformOrigin="0.742,3.995" HorizontalAlignment="Right" Width="126"/>
        </StackPanel>
    </Grid>
</UserControl>
